<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions 
    name="NexmlService" 
    targetNamespace="http://www.nexml.org/1.0"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" 
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" 
    xmlns:nex="http://www.nexml.org/1.0">
     
    <wsdl:import namespace="http://www.nexml.org/1.0" location="../nexml.xsd"/>
    
    <wsdl:message name="setTree">       
        <wsdl:part name="inTree" type="nex:ListTree"/>
    </wsdl:message>
    <wsdl:message name="getTree">
        <wsdl:part name="outTree" type="nex:ListTree"/>
    </wsdl:message>

    <wsdl:portType name="Nexml_PortType">
        <wsdl:operation name="nexmlEcho">
            <wsdl:input message="nex:setTree"/>
            <wsdl:output message="nex:getTree"/>
        </wsdl:operation>
    </wsdl:portType>

    <wsdl:binding name="Nexml_Binding" type="nex:Nexml_PortType">
        <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
        <wsdl:operation name="nexmlEcho">
            <soap:operation soapAction="nexmlEcho"/>
            <wsdl:input>
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal"/>
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="Nexml_Service">
        <wsdl:documentation>WSDL File for NexmlService</wsdl:documentation>
        <wsdl:port binding="nex:Nexml_Binding" name="Nexml_Port">
            <soap:address location="http://localhost/cgi-bin/soap.pl"/>
        </wsdl:port>
    </wsdl:service>
    
</wsdl:definitions>
